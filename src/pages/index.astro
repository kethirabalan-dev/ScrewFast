<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coming Soon</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            text-align: center;
        }
        h1 {
            font-size: 6rem;
            font-weight: bold;
            background: linear-gradient(90deg, #ff007a, #ffcc00, #00ffcc, #007aff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
            cursor: pointer; /* Indicate it's clickable */
        }
        h5 {
            font-size: 1.5rem;
            color: #6c757d;
            cursor: pointer; /* Indicate it's clickable */
        }
        p {
            display: none; /* Initially hidden */
            margin-top: 15px; /* Add margin for spacing */
        }
        .login-form {
            margin-top: 20px;
            position: relative;
            display: none; /* Initially hidden */
        }
        input[type="password"] {
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #007bff;
            border-radius: 30px;
            width: 220px;
            outline: none;
            transition: border-color 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        input[type="password"]:focus {
            border-color: #0056b3;
        }
        .arrow {
            width: 0;
            height: 0;
            border-left: 10px solid black;
            border-top: 10px solid transparent;
            border-bottom: 10px solid transparent;
            position: absolute;
            left: 200px; /* Position the arrow next to the input */
            top: 50%;
            transform: translateY(-50%);
        }
    </style>
</head>
<body>
    <h1 id="comingSoonText">Coming Soon!</h1>
    <h5 id="workingHardText">We are working hard to bring you something great.</h5>
    <p id="loginMessage">You are the site owner. Log in here:</p>

    <div class="login-form" id="login-form">
        <form id="passwordForm" style="display: flex; align-items: center;">
            <input type="password" id="password" placeholder="Enter password" required>
            <div class="arrow"></div>
        </form>
    </div>

    <script>
        // Show login message and form when clicking the title or the h5 text
        function showLogin() {
            document.getElementById('comingSoonText').style.display = 'none';
            document.getElementById('workingHardText').style.display = 'none';
            document.getElementById('loginMessage').style.display = 'block';
            document.getElementById('login-form').style.display = 'flex';
        }

        document.getElementById('comingSoonText').addEventListener('click', showLogin);
        document.getElementById('workingHardText').addEventListener('click', showLogin);

        // Login Form Logic
        document.getElementById('passwordForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const password = document.getElementById('password').value;
            const correctPassword = 'balan@9500';

            if (password === correctPassword) {
                window.location.href = '/contact'; // Redirect to the contact page
            } else {
                alert('Incorrect password. Please try again.'); // Show alert message
                document.getElementById('password').value = ''; // Clear the input
            }
        });

        // Enable Enter key to submit the form
        document.getElementById('password').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                document.getElementById('passwordForm').dispatchEvent(new Event('submit'));
            }
        });
    </script>
</body>
</html>